pipeline {
    agent any

    environment {
        
        IMAGE_NAME = "helloworld"
        VERSION = "1.0"
        FULL_IMAGE_NAME = "mahendra283/$IMAGE_NAME:$VERSION"
    }

    stages {
        stage('Build') {
            steps {
                sh 'sudo docker build -t $FULL_IMAGE_NAME .'          
            }
        }
        
    }
   
}