pipeline {
    agent any
    
    environment {
        DOCKER_IMAGE = 'mahendra283/hello-world:tagname'  // Specify your Docker image
        EC2_INSTANCE = '54.159.183.188'  // EC2 instance IP or DNS
        SSH_CREDENTIALS = credentials('ec2key')  // SSH credentials for EC2
    }

    stages {
        stage('Deploy Docker Image') {
            steps {
                script {
                    // SSH into the EC2 instance
                    sshCommand remote: EC2_INSTANCE, 
                        credentialsId: SSH_CREDENTIALS,
                        command: "docker pull ${DOCKER_IMAGE}"
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    // SSH into the EC2 instance and run the Docker container
                    sshCommand remote: EC2_INSTANCE, 
                        credentialsId: SSH_CREDENTIALS,
                        command: "docker run -d -p 30000:3000 ${DOCKER_IMAGE}"
                }
            }
        }
    }
}
