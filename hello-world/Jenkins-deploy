pipeline {
    agent any
    
    environment {
        DOCKER_IMAGE = 'mahendra283/hello-world'  // Specify your Docker image
        EC2_INSTANCE = '54.159.183.188'  // EC2 instance IP or DNS
        SSH_CREDENTIALS = credentials('ec2pem')  // SSH credentials for EC2
    }

    stages {
        stage('Deploy Docker Image') {
            steps {
                script {
                    // SSH into the EC2 instance
                    sh """
                    ssh -i ${SSH_CREDENTIALS} -o StrictHostKeyChecking=no ec2-user@${EC2_INSTANCE} << EOF
                    docker pull \${DOCKER_IMAGE}
                    docker run -d --name container1 -p 3000:3000 \${DOCKER_IMAGE}
                    >> EOF
                 """
                }
            }
        }
    }
}